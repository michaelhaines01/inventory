<h1>{{title}}</h1>

<form action="" method="POST">

  <label for="name">Name</label>
  <input
    name="name"
    type="text"
    placeholder="Enter brand name"
    required="true"
    value=""
  />
  <label for="description">description</label>
  <input
    name="description"
    type="text"
    placeholder="Enter brand description"
    required="true"
    value=""
  />

  <label for="price">Price</label>
  <input type="number" name="price" min="1" max="10000" required="true" />

  <label for="brands">Choose Brand</label>
  <select name="brands" id="brands" name="brands">
    {{#each brands}}
      <option value="{{this._id}}">{{this.name}}</option>

    {{/each}}
  </select>

  {{#each categories}}
    <label for="{{this._id}}">{{this.type}}</label>
    <input
      type="radio"
      name="categories"
      id="{{this._id}}"
      value="{{this._id}}"
    />

  {{/each}}
  <button type="submit">Add new brand</button>
</form>
